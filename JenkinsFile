pipeline {
  agent { lable 'Jenkins-Agent' }
  tools {
    jdk 'Java17'
    maven 'Maven3'
  }
  
  stage(Cleanup Workspace) {
    steps {
    cleanWs()
    }
    
  stage(Checkout From SCM) {
    steps {
      git branch: 'main', credentialsId: 'github', url: 'https://github.com/Prithvi9535/register-app'
    }
  }

  stage(Build Application) {
    steps {
      sh "mvn clean package"
    }
  }
  stage(Test Application) {
    steps {
      sh "mvn test"
    }
  } 
  }
}
