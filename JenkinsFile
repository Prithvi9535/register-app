pipeline {
    agent {
        label 'Jenkins-Agent' // Fixed typo: changed 'lable' to 'label'
    }

    tools {
        jdk 'Adoptium JDK 17' // Use the correct JDK tool name as configured in Jenkins
    }

    stages {
        stage('Cleanup Workspace') {
            steps {
                // Add commands for cleaning up the workspace
                deleteDir() // This is just an example; add your specific cleanup commands
            }
        }

        stage('Checkout From SCM') {
            steps {
                checkout scm // Checks out the code from your Git repository
            }
        }

        // Add other stages here
    }

    post {
        always {
            // Commands that should always run after the pipeline, like cleanup or notifications
            echo 'Cleaning up after the build...'
        }
    }
}
